void drawFrameGrid(int x0, int y0, const SpriteRow* frame) {
  for (int y = 0; y < SPRITE_H; y++) {
    for (int x = 0; x < SPRITE_W; x++) {
      if (pgm_read_byte(&frame[y][x])) {
        display.drawPixel(x0 + x, y0 + y, SSD1306_WHITE);
      }
    }
  }
}

void setup() {
  Serial.begin(115200);
  delay(300);
  Wire.begin(8, 9); // SDA, SCL for many ESP32-C3 SuperMini boards
  if (!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println("SSD1306 not found");
  }
  display.clearDisplay();
  display.setTextColor(SSD1306_WHITE);
  display.setTextSize(1);
  display.setCursor(0, 0);
  display.println("Booting...");
  display.display();
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, pass);
  Serial.printf("Connecting to: %s\n", ssid);
  int tries = 0;
  while (WiFi.status() != WL_CONNECTED && tries < 60) {
    delay(500);
    Serial.print(".");
    tries++;
  }
  Serial.println();
  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("WiFi connected");
    Serial.print("ESP IP: ");
    Serial.println(WiFi.localIP());
    server.on("/ping", HTTP_GET, handlePing);
    server.on("/set", HTTP_GET, handleArgs);  // <-- important
    server.begin();
    Serial.println("HTTP server started");
  } else {
    Serial.print("WiFi failed, status=");
    Serial.println((int)WiFi.status());
  }
}

void loop() {
  server.handleClient();
}