#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, -1);

const char* ssid = "No one likes you";
const char* pass = "sixthform";

WebServer server(80);


String mood = "neutral";

int happiness = 100;
int energy = 100;
int current_frame = 0;
int age = 0;
int hunger = 20;

static const int SPRITE_H = 39;
static const int SPRITE_W = 33;

using SpriteRow = uint8_t[SPRITE_W];


void drawScreen();

void handleArgs() {
  if (server.hasArg("happiness")) happiness = server.arg("happiness").toInt();
  if (server.hasArg("energy")) energy = server.arg("energy").toInt();
  if (server.hasArg("current_frame")) current_frame = server.arg("current_frame").toInt();
  if (server.hasArg("age")) age = server.arg("age").toInt();
  if (server.hasArg("hunger")) hunger = server.arg("hunger").toInt();

  drawScreen();
  server.send(200, "text/plain", "updated");
}

void drawScreen() {
   display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
  // top status line
  display.setCursor(0, 0);
  display.print("H:");
  display.print(hunger);
  display.print(" P:");
  display.print(happiness);
  display.print(" E:");
  display.println(energy);
  // centered sprite area below stats
  const SpriteRow* sprite = spriteFromMood(mood);
  int sx = (SCREEN_WIDTH - SPRITE_W) / 2;
  int sy = 12; // leaves space for top text
  drawFrameGrid(sx, sy, sprite);
  display.display();
}

void handlePing() {
  server.send(200, "text/plain", "ok");
}


